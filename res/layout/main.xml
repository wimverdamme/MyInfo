<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/LabelStart" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <Button
                android:id="@+id/ButtonYes"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:onClick="onButtonYesClick"
                android:text="@string/LabelYes" />

            <Button
                android:id="@+id/ButtonNo"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:onClick="onButtonNoClick"
                android:text="@string/LabelNo" />
        </LinearLayout>
    </LinearLayout>

    <Button
        android:id="@+id/ButtonAll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#010101"
        android:onClick="onButtonAllClick"
        android:text="@string/LabelAll"
        android:textColor="#010101"
        android:textColorHighlight="#010101" />

    <Button
        android:id="@+id/ButtonConvert"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="onButtonConvertClick"
        android:text="@string/Convert" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <Button
            android:id="@+id/ExportButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/Export" />

        <Button
            android:id="@+id/SaveButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/Save" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/SelectedFile"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <TextView
            android:id="@+id/NrOfPoisFound"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </LinearLayout>

</LinearLayout>